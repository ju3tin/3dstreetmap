{
	"compilerOptions": {
		"module": "esnext",
		"target": "es6",
		"lib": [
			"es2021",
			"dom"
		],
		"allowJs": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"jsx": "react",
		"baseUrl": "./src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": [
		"src"
	]
}
